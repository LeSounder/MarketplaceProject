@model MarketplaceProject.Domain.ViewModels.Account.LoginViewModel

<link rel="stylesheet" href="~/css/loginStyle.css" asp-append-version="true" />

<div id="login-box">
    <div class="left">
        <h1>Вход</h1>
        <form autocomplete="on" method="post" asp-controller="Account" asp-action="Login">
            <input asp-for="UserName" type="text" name="username" placeholder="Имя пользователя" />
            <input asp-for="Password" type="password" name="password" placeholder="Пароль" />
            <div class="submit-button"><input type="submit" name="signup_submit" value="Войти" /></div>
        </form>
    </div>
</div>